@model IEnumerable<PrograAvanzada.Models.tarea>

@{
    ViewBag.Title = "Index";
}

<br> </br>

<div class="panel panel-default">
    <div class="panel-body">
        <h2>Tareas</h2>
    </div>
</div>

<p>
    @Html.ActionLink("Crear Nueva Tarea", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.observacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.proyecto.nombre_proyecto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.observacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.proyecto.nombre_proyecto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_tarea }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_tarea }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_tarea })
        </td>
    </tr>
}

</table>
