@model IEnumerable<PrograAvanzada.Models.tarea>

@{
    ViewBag.Title = "TareasPorProyecto";
}

<h2>TareasPorProyecto</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tarea")
        </th>
        <th>
            @Html.DisplayName("Correo Electronico")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.observacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado.descripcion)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_tarea }) |
            @Html.ActionLink("Ver Comentarios", "Ver", new { id = item.id_tarea })

            @*@Html.ActionLink("Ver Historico", "Ver", new { id = item.id_tarea })*@
        </td>
    </tr>
}

</table>
