@model PrograAvanzada.Models.comentario_por_tarea

@{
    ViewBag.Title = "Details";
}

<br> </br>

<div class="panel panel-default">
    <div class="panel-body">
        <h2>Detalles</h2>
    </div>
</div>

<div>
    <h4>Detalles de comentario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Comentario: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comentario)
        </dd>

        <dt>
            @Html.DisplayName("Fecha comentario: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_comentario)
        </dd>

        <dt>
            @Html.DisplayName("Correo electronico: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUsers.Email)
        </dd>

        <dt>
            @Html.DisplayName("Tarea: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tarea.observacion)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id_comentario }) |
    @Html.ActionLink("Atras", "Index")
</p>
